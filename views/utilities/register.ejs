<head>
    <link rel="stylesheet" href="style.css">
</head>

<div class="form-container">
    <h3 style="padding: 5%;"> Register for a new account!</h3>
    <form method="POST" action="/signup" enctype="multipart/form-data">
        <div class="register-content-container">
            <!-- <input type="text" name="fullname" placeholder="your full name" class="login-full-name"> -->

            <input type="text" name="username" placeholder="choose a username" class="login-username" required>

            <input type="password" name="password" placeholder="choose a password" class="login-password" required>
            <input type="submit" name="submitbutton" value="make my account!" class="submit-btn">
        </div>
    </form>

    <% if (error) { %>
        <p class="error">
            <%= error %>
        </p>
        <% } %>
</div>